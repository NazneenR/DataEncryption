<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/bkground"
                android:layout_centerVertical="true"
                android:orientation="vertical">
  <Button
          android:id="@+id/startButton"
          android:layout_width="350dip"
          android:layout_height="80dip"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="50dip"
          android:background="@drawable/btn_format"
          android:text="@string/encrypt"
          android:textColor="@color/text_color"
          android:textSize="30sp"
          android:textStyle="bold"/>
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/editText"
          android:text="Text to Encrypt"
          android:textColor="@color/text_color"
          android:layout_below="@+id/startButton"/>
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/editText2"
          android:textColor="@color/text_color"
          android:text="Test String"
          android:layout_toRightOf="@+id/editText" android:layout_below="@+id/startButton"/>
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/editText3"
          android:text="Encrypted Text"
          android:textColor="@color/text_color"
          android:layout_below="@+id/editText"/>
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/editText4"
          android:textColor="@color/text_color"
          android:layout_below="@+id/editText2"
          android:layout_toRightOf="@+id/editText3" android:layout_alignBottom="@+id/editText3"/>
<EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/editText5"
          android:text="Decrypted Text"
          android:textColor="@color/text_color"
          android:layout_below="@+id/editText3"/>
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/editText6"
          android:textColor="@color/text_color"
          android:layout_below="@+id/editText4"
          android:layout_toRightOf="@+id/editText5" android:layout_alignBottom="@+id/editText5"/>

</RelativeLayout>



